# .toolbox.env
# Environment variables used by the provisioning scripts. Source this file from the repo root.

# Name of the toolbox/container (default: rocm-llama)
TOOLBOX_NAME="rocm-llama"

# Workspace directory inside the toolbox (default: /workspace)
WORKSPACE_DIR="/workspace"

# GPU target architecture (default: gfx1151)
GPU_TARGET="gfx1151"

# Build platform (default: linux)
BUILD_PLATFORM="linux"

# ROCm installation root (default: /opt/rocm)
ROCM_HOME="/opt/rocm"

# Base image for the toolbox (default: ubuntu24.04)
BASE_IMAGE="docker.io/library/ubuntu:24.04"
